import { useState } from "react";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Heart, Trash2 } from "lucide-react";
import { toast } from "@/hooks/use-toast";
import { format } from "date-fns";

interface GratitudeNote {
  id: string;
  text: string;
  timestamp: Date;
}

interface GratitudeJournalProps {
  notes: GratitudeNote[];
  onAddNote: (text: string) => void;
  onDeleteNote: (id: string) => void;
}
export function GratitudeJournal({ notes, onAddNote, onDeleteNote }: GratitudeJournalProps) {
  const [newNote, setNewNote] = useState("");

  const handleSave = () => {
    if (!newNote.trim()) {
      toast({
        title: "Empty note",
        description: "Please write something you're grateful for.",
        variant: "destructive",
      });
      return;
    }

    onAddNote(newNote);
    setNewNote("");
    toast({
      title: "Gratitude saved! ðŸ’œ",
      description: "Practicing gratitude builds a positive mindset.",
    });
  };

  return (
    <div className="rounded-2xl bg-card p-6 shadow-soft animate-fade-in">
      <div className="flex items-center gap-2 mb-1">
        <Heart className="h-5 w-5 text-coral fill-coral" />
        <h2 className="font-display text-xl font-semibold text-foreground">
          Gratitude Journal
        </h2>
      </div>
      <p className="text-sm text-muted-foreground mb-6">
        Write what you're grateful for today
      </p>

      <div className="space-y-4">
        <Textarea
          placeholder="Today I'm grateful for..."
          value={newNote}
          onChange={(e) => setNewNote(e.target.value)}
          className="resize-none rounded-xl border-border focus:border-primary"
          rows={3}
        />
        <Button
          onClick={handleSave}
          className="w-full rounded-xl bg-primary hover:bg-primary/90 text-primary-foreground font-medium"
        >
          Save Gratitude Note
        </Button>
      </div>

      <div className="mt-6">
        <h3 className="text-sm font-medium text-foreground mb-3">Your Gratitude Notes</h3>
        {notes.length === 0 ? (
          <div className="text-center py-6 text-muted-foreground text-sm">
            No gratitude notes yet. Start writing to build a positive mindset!
          </div>
        ) : (
          <div className="space-y-3 max-h-64 overflow-y-auto pr-2">
            {notes.map((note) => (
              <div
                key={note.id}
                className="p-4 rounded-xl bg-lavender-light/50 group relative"
              >
                <button
                  onClick={() => onDeleteNote(note.id)}
                  className="absolute top-2 right-2 p-1.5 rounded-full opacity-0 group-hover:opacity-100 hover:bg-destructive/10 transition-opacity"
                >
                  <Trash2 className="h-4 w-4 text-destructive" />
                </button>
                <p className="text-sm text-foreground pr-6">{note.text}</p>
                <p className="text-xs text-muted-foreground mt-2">
                  {format(new Date(note.timestamp), "MMM d, yyyy 'at' h:mm a")}
                </p>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
