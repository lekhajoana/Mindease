export function QuoteCard() {
  const [currentQuote, setCurrentQuote] = useState(0);
  const [isAnimating, setIsAnimating] = useState(false);

  const nextQuote = () => {
    setIsAnimating(true);
    setTimeout(() => {
      setCurrentQuote((prev) => (prev + 1) % quotes.length);
      setIsAnimating(false);
    }, 200);
  };

  return (
    <div className="relative overflow-hidden rounded-2xl bg-gradient-to-br from-lavender-light to-sage-light p-6 shadow-soft">
      <div className="absolute top-4 left-4">
        <Sparkles className="h-5 w-5 text-primary opacity-60" />
      </div>
      <button
        onClick={nextQuote}
        className="absolute top-4 right-4 p-2 rounded-full hover:bg-card/50 transition-colors"
      >
        <RefreshCw className={`h-4 w-4 text-muted-foreground ${isAnimating ? 'animate-spin' : ''}`} />
      </button>
      <div className={`pt-4 transition-opacity duration-200 ${isAnimating ? 'opacity-0' : 'opacity-100'}`}>
        <p className="text-lg font-medium text-foreground leading-relaxed mb-3">
          "{quotes[currentQuote].text}"
        </p>
        <p className="text-sm text-muted-foreground">â€” {quotes[currentQuote].author}</p>
      </div>
    </div>
  );
}
import { useState } from "react";
import { Wind, Palette, Gamepad2, X } from "lucide-react";
import { Button } from "@/components/ui/button";

type Activity = "breathing" | "drawing" | "game" | null;

export function StressReliefActivities() {
  const [activeActivity, setActiveActivity] = useState<Activity>(null);

  return (
    <div className="rounded-2xl bg-card p-6 shadow-soft animate-fade-in">
      <h2 className="font-display text-xl font-semibold text-foreground mb-1">
        Stress Relief Activities
      </h2>
      <p className="text-sm text-muted-foreground mb-6">
        Take a break and try these calming activities
      </p>

      {activeActivity === null ? (
        <div className="grid gap-4">
          <ActivityCard
            icon={<Wind className="h-6 w-6" />}
            title="Breathing Exercise"
            description="4-7-8 technique for instant calm"
            color="bg-sky-light"
            onClick={() => setActiveActivity("breathing")}
          />
          <ActivityCard
            icon={<Palette className="h-6 w-6" />}
            title="Creative Drawing"
            description="Express yourself through art"
            color="bg-peach-light"
            onClick={() => setActiveActivity("drawing")}
          />
          <ActivityCard
            icon={<Gamepad2 className="h-6 w-6" />}
            title="Fun Game"
            description="Distract your mind with a simple game"
            color="bg-lavender-light"
            onClick={() => setActiveActivity("game")}
          />
        </div>
      ) : (
        <div className="relative">
          <button
            onClick={() => setActiveActivity(null)}
            className="absolute -top-2 -right-2 p-2 rounded-full bg-muted hover:bg-muted/80 transition-colors z-10"
          >
            <X className="h-4 w-4" />
          </button>
          {activeActivity === "breathing" && <BreathingExercise />}
          {activeActivity === "drawing" && <DrawingCanvas />}
          {activeActivity === "game" && <MemoryGame />}
        </div>
      )}
    </div>
  );
}

function ActivityCard({
  icon,
  title,
  description,
  color,
  onClick,
}: {
  icon: React.ReactNode;
  title: string;
  description: string;
  color: string;
  onClick: () => void;
}) {
  return (
    <button
      onClick={onClick}
      className={`flex items-center gap-4 p-4 rounded-xl ${color} hover:opacity-90 transition-all text-left group`}
    >
      <div className="p-3 rounded-xl bg-card/50 text-primary group-hover:scale-110 transition-transform">
        {icon}
      </div>
      <div>
        <h3 className="font-semibold text-foreground">{title}</h3>
        <p className="text-sm text-muted-foreground">{description}</p>
      </div>
    </button>
  );
}

function BreathingExercise() {
  const [phase, setPhase] = useState<"idle" | "inhale" | "hold" | "exhale">("idle");
  const [count, setCount] = useState(0);

  const startExercise = () => {
    setPhase("inhale");
    setCount(4);

    const interval = setInterval(() => {
      setCount((prev) => {
        if (prev <= 1) {
          setPhase((currentPhase) => {
            if (currentPhase === "inhale") {
              setCount(7);
              return "hold";
            } else if (currentPhase === "hold") {
              setCount(8);
              return "exhale";
            } else {
              clearInterval(interval);
              return "idle";
            }
          });
        }
        return prev - 1;
      });
    }, 1000);
  };

  return (
    <div className="text-center py-8">
      <div
        className={`w-32 h-32 rounded-full mx-auto mb-6 flex items-center justify-center transition-all duration-1000 ${
          phase === "idle"
            ? "bg-sky-light"
            : phase === "inhale"
            ? "bg-sky scale-110 animate-pulse-soft"
            : phase === "hold"
            ? "bg-sage scale-125"
            : "bg-lavender scale-100"
        }`}
      >
        {phase === "idle" ? (
          <Wind className="h-12 w-12 text-primary" />
        ) : (
          <span className="text-4xl font-bold text-primary-foreground">{count}</span>
        )}
      </div>
      <p className="text-lg font-medium text-foreground mb-4">
        {phase === "idle" && "Ready to begin?"}
        {phase === "inhale" && "Breathe In..."}
        {phase === "hold" && "Hold..."}
        {phase === "exhale" && "Breathe Out..."}
      </p>
      {phase === "idle" && (
        <Button onClick={startExercise} className="rounded-xl">
          Start Breathing
        </Button>
      )}
    </div>
  );
}

function DrawingCanvas() {
  const [isDrawing, setIsDrawing] = useState(false);
  const [lines, setLines] = useState<{ x: number; y: number }[][]>([]);
  const [currentLine, setCurrentLine] = useState<{ x: number; y: number }[]>([]);

  const handleMouseDown = (e: React.MouseEvent<HTMLDivElement>) => {
    setIsDrawing(true);
    const rect = e.currentTarget.getBoundingClientRect();
    setCurrentLine([{ x: e.clientX - rect.left, y: e.clientY - rect.top }]);
  };

  const handleMouseMove = (e: React.MouseEvent<HTMLDivElement>) => {
    if (!isDrawing) return;
    const rect = e.currentTarget.getBoundingClientRect();
    setCurrentLine((prev) => [...prev, { x: e.clientX - rect.left, y: e.clientY - rect.top }]);
  };

  const handleMouseUp = () => {
    if (currentLine.length > 0) {
      setLines((prev) => [...prev, currentLine]);
    }
    setCurrentLine([]);
    setIsDrawing(false);
  };

  const clearCanvas = () => {
    setLines([]);
    setCurrentLine([]);
  };

  return (
    <div>
      <div
        className="w-full h-64 bg-peach-light/30 rounded-xl cursor-crosshair relative overflow-hidden"
        onMouseDown={handleMouseDown}
        onMouseMove={handleMouseMove}
        onMouseUp={handleMouseUp}
        onMouseLeave={handleMouseUp}
      >
        <svg className="absolute inset-0 w-full h-full">
          {[...lines, currentLine].map((line, i) => (
            <polyline
              key={i}
              points={line.map((p) => `${p.x},${p.y}`).join(" ")}
              fill="none"
              stroke="hsl(var(--primary))"
              strokeWidth="3"
              strokeLinecap="round"
              strokeLinejoin="round"
            />
          ))}
        </svg>
        {lines.length === 0 && currentLine.length === 0 && (
          <div className="absolute inset-0 flex items-center justify-center text-muted-foreground text-sm">
            Draw something to express yourself
          </div>
        )}
      </div>
      <Button onClick={clearCanvas} variant="outline" className="mt-4 w-full rounded-xl">
        Clear Canvas
      </Button>
    </div>
  );
}

function MemoryGame() {
  const emojis = ["ðŸŒ¸", "ðŸŒ¿", "ðŸŒ™", "â­", "ðŸ¦‹", "ðŸŒˆ"];
  const [cards, setCards] = useState(() => shuffleCards());
  const [flipped, setFlipped] = useState<number[]>([]);
  const [matched, setMatched] = useState<number[]>([]);

  function shuffleCards() {
    return [...emojis, ...emojis]
      .sort(() => Math.random() - 0.5)
      .map((emoji, i) => ({ id: i, emoji }));
  }

  const handleClick = (index: number) => {
    if (flipped.length === 2 || flipped.includes(index) || matched.includes(index)) return;

    const newFlipped = [...flipped, index];
    setFlipped(newFlipped);

    if (newFlipped.length === 2) {
      if (cards[newFlipped[0]].emoji === cards[newFlipped[1]].emoji) {
        setMatched((prev) => [...prev, ...newFlipped]);
        setFlipped([]);
      } else {
        setTimeout(() => setFlipped([]), 1000);
      }
    }
  };

  const resetGame = () => {
    setCards(shuffleCards());
    setFlipped([]);
    setMatched([]);
  };

  const isWon = matched.length === cards.length;

  return (
    <div>
      <div className="grid grid-cols-4 gap-2 mb-4">
        {cards.map((card, i) => (
          <button
            key={card.id}
            onClick={() => handleClick(i)}
            className={`aspect-square rounded-xl text-2xl flex items-center justify-center transition-all duration-300 ${
              flipped.includes(i) || matched.includes(i)
                ? "bg-lavender-light rotate-0"
                : "bg-primary/20 hover:bg-primary/30"
            }`}
          >
            {flipped.includes(i) || matched.includes(i) ? card.emoji : "?"}
          </button>
        ))}
      </div>
      {isWon && (
        <div className="text-center mb-4">
          <p className="text-lg font-medium text-primary">ðŸŽ‰ You won!</p>
        </div>
      )}
      <Button onClick={resetGame} variant="outline" className="w-full rounded-xl">
        {isWon ? "Play Again" : "Reset Game"}
      </Button>
    </div>
  );
}
import { LineChart, Line, XAxis, YAxis, Tooltip, ResponsiveContainer } from "recharts";
import { format } from "date-fns";

interface MoodLog {
  mood: string;
  stressLevel: number;
  notes: string;
  timestamp: Date;
}

interface StressTimelineProps {
  logs: MoodLog[];
}

export function StressTimeline({ logs }: StressTimelineProps) {
  const chartData = logs.slice(-7).map((log) => ({
    date: format(new Date(log.timestamp), "MMM d"),
    stress: log.stressLevel,
  }));

  return (
    <div className="rounded-2xl bg-card p-6 shadow-soft animate-fade-in">
      <h2 className="font-display text-xl font-semibold text-foreground mb-1">
        Stress Timeline
      </h2>
      <p className="text-sm text-muted-foreground mb-6">
        Your stress patterns over time
      </p>

      {logs.length === 0 ? (
        <div className="flex flex-col items-center justify-center py-8 text-center">
          <div className="w-16 h-16 rounded-full bg-lavender-light flex items-center justify-center mb-4">
            <span className="text-3xl">ðŸ“Š</span>
          </div>
          <p className="text-muted-foreground text-sm">
            No mood logs yet. Start tracking your mood to see patterns!
          </p>
        </div>
      ) : (
        <div className="h-48">
          <ResponsiveContainer width="100%" height="100%">
            <LineChart data={chartData}>
              <XAxis
                dataKey="date"
                stroke="hsl(var(--muted-foreground))"
                fontSize={12}
                tickLine={false}
                axisLine={false}
              />
              <YAxis
                domain={[1, 5]}
                stroke="hsl(var(--muted-foreground))"
                fontSize={12}
                tickLine={false}
                axisLine={false}
                ticks={[1, 2, 3, 4, 5]}
              />
              <Tooltip
                contentStyle={{
                  backgroundColor: "hsl(var(--card))",
                  border: "1px solid hsl(var(--border))",
                  borderRadius: "12px",
                  boxShadow: "0 4px 20px -4px hsl(var(--lavender) / 0.2)",
                }}
                labelStyle={{ color: "hsl(var(--foreground))" }}
              />
              <Line
                type="monotone"
                dataKey="stress"
                stroke="hsl(var(--primary))"
                strokeWidth={3}
                dot={{ fill: "hsl(var(--primary))", strokeWidth: 0, r: 5 }}
                activeDot={{ r: 7, fill: "hsl(var(--primary))" }}
              />
            </LineChart>
          </ResponsiveContainer>
        </div>
      )}
    </div>
  );
}
import { useState } from "react";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Checkbox } from "@/components/ui/checkbox";
import { Plus, Trash2, ListTodo } from "lucide-react";
import { toast } from "@/hooks/use-toast";

interface Todo {
  id: string;
  text: string;
  completed: boolean;
}

interface TodoListProps {
  todos: Todo[];
  onAddTodo: (text: string) => void;
  onToggleTodo: (id: string) => void;
  onDeleteTodo: (id: string) => void;
}

export function TodoList({ todos, onAddTodo, onToggleTodo, onDeleteTodo }: TodoListProps) {
  const [newTodo, setNewTodo] = useState("");

  const handleAdd = () => {
    if (!newTodo.trim()) {
      toast({
        title: "Empty task",
        description: "Please enter a task to add.",
        variant: "destructive",
      });
      return;
    }

    onAddTodo(newTodo);
    setNewTodo("");
  };

  const handleKeyPress = (e: React.KeyboardEvent) => {
    if (e.key === "Enter") {
      handleAdd();
    }
  };

  const completedCount = todos.filter((t) => t.completed).length;

  return (
    <div className="rounded-2xl bg-card p-6 shadow-soft animate-fade-in">
      <div className="flex items-center gap-2 mb-1">
        <ListTodo className="h-5 w-5 text-primary" />
        <h2 className="font-display text-xl font-semibold text-foreground">
          To-Do List
        </h2>
      </div>
      <p className="text-sm text-muted-foreground mb-6">
        Organize your tasks and stay productive
      </p>

      <div className="flex gap-2 mb-4">
        <Input
          placeholder="Add a new task..."
          value={newTodo}
          onChange={(e) => setNewTodo(e.target.value)}
          onKeyPress={handleKeyPress}
          className="rounded-xl border-border focus:border-primary"
        />
        <Button
          onClick={handleAdd}
          size="icon"
          className="rounded-xl bg-primary hover:bg-primary/90 shrink-0"
        >
          <Plus className="h-5 w-5" />
        </Button>
      </div>

      {todos.length > 0 && (
        <div className="text-xs text-muted-foreground mb-3">
          {completedCount} of {todos.length} completed
        </div>
      )}

      {todos.length === 0 ? (
        <div className="text-center py-8 text-muted-foreground text-sm">
          <div className="w-14 h-14 rounded-full bg-sage-light flex items-center justify-center mx-auto mb-3">
            <span className="text-2xl">âœ…</span>
          </div>
          No tasks yet. Add your first task to get started!
        </div>
      ) : (
        <div className="space-y-2 max-h-72 overflow-y-auto pr-2">
          {todos.map((todo) => (
            <div
              key={todo.id}
              className={`flex items-center gap-3 p-3 rounded-xl transition-all group ${
                todo.completed ? "bg-muted/50" : "bg-sage-light/30 hover:bg-sage-light/50"
              }`}
            >
              <Checkbox
                checked={todo.completed}
                onCheckedChange={() => onToggleTodo(todo.id)}
                className="border-primary data-[state=checked]:bg-primary data-[state=checked]:border-primary"
              />
              <span
                className={`flex-1 text-sm transition-all ${
                  todo.completed ? "line-through text-muted-foreground" : "text-foreground"
                }`}
              >
                {todo.text}
              </span>
              <button
                onClick={() => onDeleteTodo(todo.id)}
                className="p-1.5 rounded-full opacity-0 group-hover:opacity-100 hover:bg-destructive/10 transition-opacity"
              >
                <Trash2 className="h-4 w-4 text-destructive" />
              </button>
            </div>
          ))}
        </div>
      )}
    </div>
  );
}
