import { useState, useEffect } from "react";
import { Header } from "@/components/Header";
import { QuoteCard } from "@/components/QuoteCard";
import { MoodTracker } from "@/components/MoodTracker";
import { StressTimeline } from "@/components/StressTimeline";
import { GratitudeJournal } from "@/components/GratitudeJournal";
import { TodoList } from "@/components/TodoList";
import { StressReliefActivities } from "@/components/StressReliefActivities";

interface MoodLog {
  mood: string;
  stressLevel: number;
  notes: string;
  timestamp: Date;
}

interface GratitudeNote {
  id: string;
  text: string;
  timestamp: Date;
}

interface Todo {
  id: string;
  text: string;
  completed: boolean;
}

const Index = () => {
  const [moodLogs, setMoodLogs] = useState<MoodLog[]>(() => {
    const saved = localStorage.getItem("mindease-mood-logs");
    return saved ? JSON.parse(saved) : [];
  });

  const [gratitudeNotes, setGratitudeNotes] = useState<GratitudeNote[]>(() => {
    const saved = localStorage.getItem("mindease-gratitude");
    return saved ? JSON.parse(saved) : [];
  });

  const [todos, setTodos] = useState<Todo[]>(() => {
    const saved = localStorage.getItem("mindease-todos");
    return saved ? JSON.parse(saved) : [];
  });

  useEffect(() => {
    localStorage.setItem("mindease-mood-logs", JSON.stringify(moodLogs));
  }, [moodLogs]);

  useEffect(() => {
    localStorage.setItem("mindease-gratitude", JSON.stringify(gratitudeNotes));
  }, [gratitudeNotes]);

  useEffect(() => {
    localStorage.setItem("mindease-todos", JSON.stringify(todos));
  }, [todos]);

  const handleLogMood = (log: MoodLog) => {
    setMoodLogs((prev) => [...prev, log]);
  };

  const handleAddGratitude = (text: string) => {
    setGratitudeNotes((prev) => [
      { id: crypto.randomUUID(), text, timestamp: new Date() },
      ...prev,
    ]);
  };

  const handleDeleteGratitude = (id: string) => {
    setGratitudeNotes((prev) => prev.filter((note) => note.id !== id));
  };

  const handleAddTodo = (text: string) => {
    setTodos((prev) => [
      ...prev,
      { id: crypto.randomUUID(), text, completed: false },
    ]);
  };

  const handleToggleTodo = (id: string) => {
    setTodos((prev) =>
      prev.map((todo) =>
        todo.id === id ? { ...todo, completed: !todo.completed } : todo
      )
    );
  };

  const handleDeleteTodo = (id: string) => {
    setTodos((prev) => prev.filter((todo) => todo.id !== id));
  };

  return (
    <div className="min-h-screen bg-background">
      <div className="max-w-2xl mx-auto px-4 pb-12">
        <Header />
        
        <div className="space-y-6">
          <QuoteCard />
          
          <MoodTracker onLogMood={handleLogMood} />
          
          <StressTimeline logs={moodLogs} />
          
          <GratitudeJournal
            notes={gratitudeNotes}
            onAddNote={handleAddGratitude}
            onDeleteNote={handleDeleteGratitude}
          />
          
          <TodoList
            todos={todos}
            onAddTodo={handleAddTodo}
            onToggleTodo={handleToggleTodo}
            onDeleteTodo={handleDeleteTodo}
          />
          
          <StressReliefActivities />
        </div>
      </div>
    </div>
  );
};

export default Index;
