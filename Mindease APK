import { toast } from "@/hooks/use-toast";

type Mood = "happy" | "calm" | "sad" | "anxious" | "stressed";

interface MoodOption {
  value: Mood;
  emoji: string;
  label: string;
  color: string;
}

const moods: MoodOption[] = [
  { value: "happy", emoji: "ðŸ˜Š", label: "Happy", color: "bg-mood-happy" },
  { value: "calm", emoji: "ðŸ˜Œ", label: "Calm", color: "bg-mood-calm" },
  { value: "sad", emoji: "ðŸ˜¢", label: "Sad", color: "bg-mood-sad" },
  { value: "anxious", emoji: "ðŸ˜°", label: "Anxious", color: "bg-mood-anxious" },
  { value: "stressed", emoji: "ðŸ˜«", label: "Stressed", color: "bg-mood-stressed" },
];

const stressLevels = [
  { value: 1, label: "Very Low" },
  { value: 2, label: "Low" },
  { value: 3, label: "Moderate" },
  { value: 4, label: "High" },
  { value: 5, label: "Very High" },
];

interface MoodLog {
  mood: Mood;
  stressLevel: number;
  notes: string;
  timestamp: Date;
}

interface MoodTrackerProps {
  onLogMood: (log: MoodLog) => void;
}

export function MoodTracker({ onLogMood }: MoodTrackerProps) {
  const [selectedMood, setSelectedMood] = useState<Mood | null>(null);
  const [stressLevel, setStressLevel] = useState<number | null>(null);
  const [notes, setNotes] = useState("");

  const handleLogMood = () => {
    if (!selectedMood || !stressLevel) {
      toast({
        title: "Please complete the form",
        description: "Select your mood and stress level to continue.",
        variant: "destructive",
      });
      return;
    }

    onLogMood({
      mood: selectedMood,
      stressLevel,
      notes,
      timestamp: new Date(),
    });

    toast({
      title: "Mood logged! ðŸŒŸ",
      description: "Keep tracking to understand your patterns better.",
    });

    setSelectedMood(null);
    setStressLevel(null);
    setNotes("");
  };

  return (
    <div className="rounded-2xl bg-card p-6 shadow-soft animate-fade-in">
      <h2 className="font-display text-xl font-semibold text-primary mb-1">
        How are you feeling?
      </h2>
      <p className="text-sm text-muted-foreground mb-6">
        Track your mood and stress levels
      </p>

      <div className="space-y-6">
        {/* Mood Selection */}
        <div>
          <h3 className="text-sm font-medium text-foreground mb-3">Select your mood</h3>
          <div className="flex flex-wrap gap-2">
            {moods.map((mood) => (
              <button
                key={mood.value}
                onClick={() => setSelectedMood(mood.value)}
                className={`flex flex-col items-center p-3 rounded-xl border-2 transition-all duration-200 min-w-[70px] ${
                  selectedMood === mood.value
                    ? "border-primary bg-primary/10 scale-105"
                    : "border-border hover:border-primary/50 hover:bg-muted"
                }`}
              >
                <span className="text-2xl mb-1">{mood.emoji}</span>
                <span className="text-xs font-medium">{mood.label}</span>
              </button>
            ))}
          </div>
        </div>

        {/* Stress Level */}
        <div>
          <h3 className="text-sm font-medium text-foreground mb-3">Stress level (1-5)</h3>
          <div className="flex gap-2">
            {stressLevels.map((level) => (
              <button
                key={level.value}
                onClick={() => setStressLevel(level.value)}
                className={`flex flex-col items-center p-3 rounded-xl border-2 transition-all duration-200 flex-1 ${
                  stressLevel === level.value
                    ? "border-primary bg-primary/10"
                    : "border-border hover:border-primary/50 hover:bg-muted"
                }`}
              >
                <span className="text-lg font-bold">{level.value}</span>
                <span className="text-[10px] text-muted-foreground">{level.label}</span>
              </button>
            ))}
          </div>
        </div>

        {/* Notes */}
        <div>
          <h3 className="text-sm font-medium text-foreground mb-3">Notes (optional)</h3>
          <Textarea
            placeholder="How are you feeling? What's on your mind?"
            value={notes}
            onChange={(e) => setNotes(e.target.value)}
            className="resize-none rounded-xl border-border focus:border-primary"
            rows={3}
          />
        </div>

        <Button
          onClick={handleLogMood}
          className="w-full rounded-xl bg-primary hover:bg-primary/90 text-primary-foreground font-medium py-5"
        >
          Log Mood
        </Button>
      </div>
    </div>
  );
}
